{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests"
  ],
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "major"
      ],
      "automerge": true
    },
    {
      "matchCurrentVersion": "8.0",
      "matchPackageNames": [
        "php"
      ],
      "enabled": false
    },
    {
      "matchCurrentVersion": "8.1",
      "matchPackageNames": [
        "php"
      ],
      "enabled": false
    }
  ]
}
