{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchCurrentVersion": "8.0",
      "matchPackageNames": ["php"],
      "enabled": false
    },
    {
      "matchCurrentVersion": "8.1",
      "matchPackageNames": ["php"],
      "enabled": false
    }
  ]
}
